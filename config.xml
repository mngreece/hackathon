<?xml version='1.0' encoding='utf-8'?>
<widget id="com.reece.hackathon" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Hackathon</name>
    <description>
        RFID Hack!!!
    </description>
    <author email="mathewng@hotmail.com.au" href="http://cordova.io">
        Team RFID
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-vibration" />
    <plugin name="phonegap-nfc" source="npm" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="res/icons/android/icon-36-ldpi.png" platform="android" qualifier="ldpi" />
        <icon src="res/icons/android/icon-48-mdpi.png" platform="android" qualifier="mdpi" />
        <icon src="res/icons/android/icon-72-hdpi.png" platform="android" qualifier="hdpi" />
        <icon src="res/icons/android/icon-96-xhdpi.png" platform="android" qualifier="xhdpi" />
        <icon src="res/icons/android/icon-144-xxhdpi.png" platform="android" qualifier="xxhdpi" />
        <icon src="res/icons/android/icon-192-xxxhdpi.png" platform="android" qualifier="xxxhdpi" />
        <splash src="res/screens/android/screen-ldpi-portrait.png" platform="android" qualifier="ldpi" />
        <splash src="res/screens/android/screen-mdpi-portrait.png" platform="android" qualifier="mdpi" />
        <splash src="res/screens/android/screen-hdpi-portrait.png" platform="android" qualifier="hdpi" />
        <splash src="res/screens/android/screen-xhdpi-portrait.png" platform="android" qualifier="xhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="SplashScreenDelay" value="5000" />
</widget>
